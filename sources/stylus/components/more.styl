.more
    padding: 100px 0
    &__main
        display: flex
        flex-wrap: wrap
        +below($max-xs)
            flex-direction: column-reverse;
        &-item
            width: 50%
            padding: 0 30px
            +below($max-xs)
                width 100%
            &_img
                display: flex
                justify-content: center
                flex-wrap: wrap
                align-items: center
                +below($max-xs)
                    margin-top: 60px
                img
                    max-width 486px
                    max-height: 513px
                    width: 100%
                    height 100%
                    object-fit: contain
            &_select
                width 100%
                margin-bottom: 19px
                .custom-select-wrapper
                    position relative
                    display inline-block
                    user-select none
                    width 100%
                    +below($max-xs)
                        display flex
                    select
                        display none
                .custom-select
                    position relative
                    display inline-block
                    width 100%
                    max-width: 555px;
                    margin: 0 auto;
                    &.opened
                        .custom-options
                            opacity 1
                            visibility visible
                            pointer-events all
                            transform translateY(0)
                .custom-select-trigger
                    position relative
                    display block
                    max-width 555px
                    width 100%
                    padding 0 84px 0 22px
                    font-size 24px
                    font-weight 300
                    color $black
                    line-height 60px
                    background $white
                    border-radius 6px
                    cursor pointer
                    border 2px solid  rgb(229, 228, 215)
                    &:after
                        position absolute
                        display block
                        content ''
                        width 10px
                        height 10px
                        top 25px
                        right 15px
                        border-bottom 1px solid $black
                        border-right 1px solid $black
                        transform rotate(-135deg) translateY(-50%)
                        transition all .4s ease-in-out
                        transform-origin 50% 0
                    &:before
                        position absolute
                        display block
                        content ''
                        width 10px
                        height 10px
                        bottom 15px
                        right 15px
                        border-bottom 1px solid $black
                        border-right 1px solid $black
                        transform rotate(45deg) translateY(-50%)
                        transition all .4s ease-in-out
                        transform-origin 50% 0
                .custom-options
                    position absolute
                    display block
                    top 100%
                    left 0
                    right 0
                    min-width 100%
                    margin 5px 0
                    border 1px solid #b5b5b5
                    border-radius 4px
                    box-sizing border-box
                    background $white
                    transition all .4s ease-in-out
                    opacity 0
                    visibility hidden
                    pointer-events none
                    transform translateY(-15px)
                    z-index: 98
                .option-hover
                    &:before
                        background #f9f9f9
                .custom-option
                    position relative
                    display block
                    padding 0 22px
                    border-bottom 1px solid #b5b5b5
                    font-size 18px
                    font-weight 400
                    color $black
                    line-height 40px
                    cursor pointer
                    transition all .4s ease-in-out
                    &:first-of-type
                        border-radius 4px 4px 0 0
                    &:last-of-type
                        border-bottom 0
                        border-radius 0 0 4px 4px
                .custom-option:hover,
                .custom-option.selection
                    background rgb(229, 228, 215)
                    font-weight bold!important
            &_option
                width 100%
                margin-bottom: 40px
                .radio
                    margin: 0
                    height 41px
                    display: flex;
                    align-items: center;
                    label
                        span
                            width 100%
                            display: block
                            font-size: 16px
                            color: $black
                            line-height: 20.5px
                            &.bold
                                font-weight: bold
                    &__item
                        width 50%
                        &-help
                            display: none
                            color: $black
                            padding: 15px;
                            width: 300px;
                            position: absolute;
                            bottom: calc(100% + 20px);
                            left: 50%
                            transform: translateX(-50%);
                            z-index: 999;
                            background: $siteColorGrey
                            border-radius: 6px;
                            cursor: default;
                            +below($max-sm)
                                left 0
                            span
                                width 100%
                                display: block
                                font-size: 14px
                            a
                                text-decoration: underline;
                                color: $siteColorMentol
                                font-size: 14px
                            &:before
                                position absolute
                                display block
                                content ''
                                width 10px
                                height 10px
                                bottom: -10px;
                                left: 50%;
                                background: $siteColorGrey
                                border-bottom 1px solid $siteColorGrey
                                border-right 1px solid $siteColorGrey
                                transform rotate(45deg) translateY(-50%)
                                transition all .4s ease-in-out
                                transform-origin 50% 0
                    input[type="radio"]
                        & + label
                            display inline-block
                            cursor pointer
                            position relative
                            padding-left 61px
                            margin-right 15px
                            font-size 13px
                            &:before
                                content: ""
                                display block
                                width 41px
                                height 41px
                                position absolute
                                top 0
                                left 0
                                border 1px solid $siteColorBorder
                                background-color $white
                                border-radius 6px
                            &:after
                                content: ""
                                display block
                                width 16px
                                height 16px
                                position absolute
                                top: 13.5px;
                                left: 13.5px;
                                border 1px solid $siteColorBorder
                                background-color $siteColorBorder
                                border-radius 6px
                    input[type="radio"]
                        &:checked + label
                            span.bold
                                color: $siteColorMentol!important
                            .radio__item-help
                                display: block
                    input[type="radio"]
                        display none !important
                        *display inline
                        &:checked + label
                            &:before
                                content: ""
                                display block
                                width 41px
                                height 41px
                                position absolute
                                top 0
                                left 0
                                border 1px solid $siteColorMentol
                                background-color $siteColorMentol
                                border-radius 6px
                            &:after
                                content: ""
                                display block
                                position absolute
                                top: 0;
                                left: 0;
                                width: 41px;
                                height: 41px;
                                border: none;
                                background url("/assets/img/check.png") center no-repeat
            &_buy
                width 100%
                display: flex
                +below($max-sm)
                    flex-wrap: wrap
                &-price
                    width 50%
                    +below($max-sm)
                        width 100%
                        margin-bottom: 20px
                        text-align: center
                    span
                        width 100%
                        display: block
                        font-size: 16px
                        font-family: 'Montserrat', sans-serif;
                        &.bold
                            font-weight: bold
                            font-size: 18px
                &-btn
                    width 50%
                    text-align: center
                    +below($max-sm)
                        width 100%
                    .btn
                        max-width: 249px;
                        width 100%
                        height: 60px;
                        font-size: 18px;
                        font-weight: bold
                        font-family: 'Montserrat', sans-serif;
