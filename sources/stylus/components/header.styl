.header
    background-color: $siteColorGrey
    position: sticky;
    width: 100%;
    top: 0;
    z-index 99
    &__main
        display: flex;
        justify-content: space-between
        +below($max-xs)
            display: none
        &-block
            display: flex;
            align-items: center;
            height: 108px
            +below($max-xs)
                width: 33%
            &--left
                justify-content: flex-start
                +below($max-xs)
                    width 40px
            &--center
                justify-content: center
                +below($max-xs)
                    width 100%
            &--right
                justify-content: flex-end
                +below($max-xs)
                    width: 100px
            &_item
                vertical-align: middle
                a
                    transition: ease-in-out .3s
                    &:hover
                        color $siteColorMentol
                span
                    font-size: 16px
                    line-height: 24px;
                    display: inline-block;
                    vertical-align: middle;
                &:first-child
                    margin-right: 29px
                    +below($max-xs)
                        margin-right: 0
                &-img
                    margin-right: 3px
                .btn
                    color: $white!important;
    .mobile__menu
        display: none;
        +below($max-xs)
            height: 108px;
            display: flex;
            justify-content: space-between;
            align-items: center;
    #menuToggle
        display block
        position relative
        z-index 1
        -webkit-user-select none
        user-select none
        a
            text-decoration none
            color $black
            transition color 0.3s ease
            &:hover
                color $siteColorMentol
        input
            display block
            width 40px
            height 32px
            position absolute
            top -7px
            left -5px
            cursor pointer
            opacity 0
            z-index 2
            -webkit-touch-callout none
            &:checked
                & ~ span
                    opacity 1
                    transform rotate(45deg) translate(-2px, -1px)
                    background $black
                    &:nth-last-child(3)
                        opacity 0
                        transform rotate(0deg) scale(0.2, 0.2)
                    &:nth-last-child(2)
                        transform rotate(-45deg) translate(0, -1px)
                & ~ ul
                    transform none
        span
            display block
            width 33px
            height 4px
            margin-bottom 5px
            position relative
            background $siteColorMentol
            border-radius 3px
            z-index 1
            transform-origin 4px 0px
            transition transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
                background 0.5s cubic-bezier(0.77,0.2,0.05,1.0),
                opacity 0.55s ease
            &:first-child
                transform-origin 0% 0%
            &:nth-last-child(2)
                transform-origin 0% 100%

    #menu
        position absolute
        width 300px
        margin -100px 0 0 -50px
        padding 50px
        padding-top 125px
        background $siteColorGrey
        list-style-type none
        -webkit-font-smoothing antialiased
        transform-origin 0% 0%
        transform translate(-100%, 0)
        transition transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0)
        li
            padding 10px 0
            font-size 22px