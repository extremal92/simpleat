.facts
    background: $siteColorGrey 
    padding: 100px 0
    font-family: 'Montserrat', sans-serif;
    &__main
        display: flex
        justify-content: space-between
        +below($max-md)
            flex-wrap: wrap
            justify-content: center
        &-item
            display: flex
            flex-wrap: wrap
            +below($max-md)
                margin: 10px 0
            &--left
                width: calc(50% - 180px)
                +below($max-md)
                    width: 100%
                .facts__main-item_block
                    justify-content: flex-end
                    flex-direction: row-reverse;
                    +below($max-md)
                        justify-content: center!important
                        flex-direction: inherit;
                    &-text
                        text-align: right 
                        +below($max-md)
                            text-align: center 
                    &:nth-child(odd)
                        padding-right 5px
                    &:nth-child(even)
                        padding-right 60px
            &--center
                justify-content: center
                max-width 360px
                width 100%
                img
                    width: 100%
            &--right
                justify-content: flex-start
                width: calc(50% - 180px)
                +below($max-md)
                    width: 100%
                .facts__main-item_block
                    justify-content: flex-start
                    +below($max-md)
                        justify-content: center!important
                    &:nth-child(odd)
                        padding-left 5px
                    &:nth-child(even)
                        padding-left 60px
                    &-img
                        +below($max-md)
                            text-align: right 
                    &-text
                        text-align: left
                        +below($max-md)
                            text-align: center 
            &_block
                width 100%
                display: flex
                align-items: center
                +below($max-md)
                    margin: 10px 0
                    padding: 0!important
                    justify-content: center!important
                +below($max-xs)
                    flex-wrap: wrap
                &-img
                    +below($max-md)
                        width 75px
                        text-align: center!important
                    +below($max-xs)
                        margin-bottom: 15px
                        width 100%
                &-text
                    margin: 0 19px
                    +below($max-md)
                        max-width: 315px
                        width 100%
                    .text-title
                        font-weight: bold
                        font-size: 18px
                        margin-bottom: 5px
                    .text-desc
                        font-size 14px
                        display: flex
                        flex-wrap: wrap
                        span
                            width: 100%
    &__pdf
        text-align: center
        margin: 37px 0
        a
            color $siteColorGreen
            font-size: 18px;
            text-decoration: underline!important
    &__btn
        text-align: center
        .btn
            width: 200px;
            height: 60px;
            font-size: 18px;
            font-weight: bold

